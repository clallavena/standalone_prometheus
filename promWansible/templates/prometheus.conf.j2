global:
  scrape_interval: 15s

rule_files:
  - "up.rules"

alerting:
  alertmanagers:
   - static_configs:
     - targets: 
         - 'localhost:9093'

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'grafana'
    scrape_interval: 15s
    static_configs:
      - targets: ['localhost:3000']
  - job_name: 'node_exporter'
    scrape_interval: 10s
    static_configs:
      - targets:
      {% for host in groups['all'] %}
        - '{{ host }}:9100'
      {% endfor %}
